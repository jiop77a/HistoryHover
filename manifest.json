{
  "manifest_version": 2,
  "name": "HistoryHover",
  "version": "1.0",
  "description": "Get's the etymology of any word on a webpage",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png"
  },

  "background": {
    "scripts": ["chrome-promise.js", "background.js"]
  },

  "permissions": [
    "tabs"
  ],


  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["https://*.google.com/*"],
      "js": ["build.js"],
      "css": ["styles.css"]
    }
  ],

  "web_accessible_resources": ["styles.css"]


}
